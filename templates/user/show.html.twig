{% extends 'base.html.twig' %}

{% block title %}Utilisateur {{ user.pseudo }}{% endblock %}

{% block body %}
<div class="m-4">
    <h1>Utilisateur {{ user.pseudo }}</h1>

    <table class="table">
            <tbody>
                <tr>
                    <th>#</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Pseudo</th>
                    <td>{{ user.pseudo }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ user.password }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user.nom }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ user.prenom }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Modifier</th>
                    <td> <a href="{{ path('user_edit', {'id': user.id}) }}"><i class="far fa-edit"></i>     Modifier</a></td>
                </tr>
            </tbody>
    </table>
    {{ include('user/_delete_form.html.twig') }}
</div>


