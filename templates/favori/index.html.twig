{% extends 'base.html.twig' %}

{% block title %}Favori index{% endblock %}

{% block body %}
    <h1>Favori index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for favori in favoris %}
            <tr>
                <td>{{ favori.id }}</td>
                <td>
                    <a href="{{ path('favori_show', {'id': favori.id}) }}">Voir</a>
                    <a href="{{ path('favori_edit', {'id': favori.id}) }}">Mettre à jour</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Liste vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('favori_new') }}">Créer une nouveau favori</a>
{% endblock %}
