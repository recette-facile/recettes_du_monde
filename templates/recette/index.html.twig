{% extends 'base.html.twig' %}

{% block title %}Nos Recettes{% endblock %}

{% block body %}
    <h1>Nos Recettes </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom de la recette</th>
                <th>Région</th>
                <th>Ingrédients </th>
                <th>Temps de preparation</th>
                <th>Temps de cuisson</th>
                <th>Préparation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recette in recettes %}
            <tr>
                <td>{{ recette.nomRecette }}</td>
                <td>{{ recette.zoneGeo.nom }}</td>
               
                <td>{{ recette.tempsPreparation }}</td>
                <td>{{ recette.tempsCuisson }}</td>
                <td>{{ recette.descriptionRecette|slice(0,200) }}...</td>
                <td>
                    <a href="{{ path('recette_show', {'id': recette.id}) }}">Consulter</a>
                    <a href="{{ path('recette_edit', {'id': recette.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recette_new') }}">Créer une nouvelle recette</a>
{% endblock %}
