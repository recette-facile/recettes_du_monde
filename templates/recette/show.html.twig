{% extends 'base.html.twig' %}

{% block title %}Recette{% endblock %}

{% block body %}
   <div class="container">
<div class="card-deck">

  <div class="card">

     <img class="card-img-top" src="/{{recette.image}}" alt="Card image cap">
    <div class="card-footer">
      <small class="text-muted">>{{recette.zoneGeo.nom}}</small>
    </div>



    <div class="card-body">
      <h5 class="card-title">{{ recette.nomRecette }}</h5>
      <p class="card-text">{{ recette.descriptionRecette}} ...</p>
    </div>
    
     <table class="table">
        <thead>
            <tr>
                <th>Ingredient</th>
            </tr>
        </thead>
        <tbody>
        {% for ingredient in ingredients %}
            <tr>
                <td>{{ ingredient.ingredient.nomIngredient }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Liste vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>




  </div>
  </div>
</div>

          </div> 
      </div>  
    </div>
  </div>
  </div>
     
      <a href="{{ path('recette_new') }}">Cr√©er une nouvelle recette</a>
{% endblock %}
