{% extends 'base.html.twig' %}

{% block title %}Recette{% endblock %}

{% block body %}
    <h1>Recette</h1>

    <table class="table">
        <tbody>
           
            <tr>
                <th>{{ recette.nomRecette }}</th>
                <th>{{ recette.zoneGeo.nom }}</th>
            </tr>
            <tr>
                <th>Temps de préparation</th>
                <td>{{ recette.tempsPreparation }}</td>
            </tr>
            <tr>
                <th>Temps de cuisson</th>
                <td>{{ recette.tempsCuisson }}</td>
            </tr>
            <tr>
                <th>Préparation</th>
                <td>{{ recette.descriptionRecette }}</td>
            </tr>
        </tbody>
    </table>
     <table class="table">
        <thead>
            <tr>
                <th>Ingredient</th>
            </tr>
        </thead>
        <tbody>
        {% for ingredient in ingredients %}
            <tr>
                <td>{{ ingredient.ingredient.nomIngredient }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Liste vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recette_index') }}">Nos recettes</a>

    <a href="{{ path('recette_edit', {'id': recette.id}) }}">Créer une nouvelle recette</a>

    {{ include('recette/_delete_form.html.twig') }}
{% endblock %}
